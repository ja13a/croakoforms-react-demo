{
	"compilerOptions": {
		"target": "ES5",
		"module": "CommonJS",
		"jsx": "react",
		"inlineSourceMap": true,
		"outDir": "./dist",
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"preserveConstEnums": true,
		"noImplicitAny": true,
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
	],
}